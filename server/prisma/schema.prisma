generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Museum {
  id        String    @id @default(uuid())
  name      String
  slug      String
  location  String
  address   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())
  Gallery   Gallery[]
}

model Gallery {
  id        String   @id @default(uuid())
  name      String
  slug      String
  museumId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  Museum    Museum   @relation(fields: [museumId], references: [id])

  @@index([museumId], map: "Gallery_museumId_fkey")
}

model Visitor {
  id          String       @id @default(uuid())
  name        String
  phoneNumber String?
  email       String?
  nrc         String?
  address     String?
  type        Citizinship? @default(isLocal)
  qrSVG       String?      @db.LongText
  isActive    Boolean?     @default(false)
  fromDate    DateTime?    @default(now())
  toDate      DateTime?    @default(now())
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @default(now())
}

enum Citizinship {
  isForeign
  isLocal
}
